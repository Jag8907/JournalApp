<h2>Index</h2>

<ul>
  <% posts.each(function(post){ %>
    <li><%= post.escape('title') %> 
      <button class="delete" data-id='<%= post.escape('id') %>'>Delete</button>
      <a href="#/posts/<%= post.id%>"><%= post.escape('title') %></a>
    </li>
  <% }) %>
</ul>
<a href="#/posts/new">Add new Post</a>
